    <div class="container"  style="margin-top: 7vmax;margin-left: 14vmax;">
        <h1  style="margin-left: 27vmax;">Notes details</h1>
        <form  class=" w-75 container"  action="/notesdetails/<%=noteone._id%>/update" method="post">
       
        
            <input
            class="form-control mb-3"
            type="text"
            placeholder="title"
            name="title"
            value="<%=noteone.title%>"
            style="width: 50vw;height: 5vh;"
        />
        

        <!-- <input
        name="description"
